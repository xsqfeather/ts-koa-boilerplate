{
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
     "skipLibCheck": true,
     "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
